# Set limits and labels
ax.set_xlim([min(0, -2), max(4, 4)])
ax.set_ylim([min(0, -2), max(4, 4)])
ax.set_zlim([min(0, -2), max(4, 4)])
ax.set_xlabel('X')
ax.set_ylabel('Y')
ax.set_zlabel('Z')
ax.legend()

plt.title('3D plot of (a+b), (a-b) and perpendicular unit vectors')
plt.show()
