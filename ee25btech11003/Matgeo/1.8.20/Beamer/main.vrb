# Midpoint
mid_x = (x1 + x2) / 2.0
mid_y = (y1 + y2) / 2.0
plt.scatter(mid_x, mid_y, color='green', label='Midpoint')
plt.text(mid_x, mid_y, f"({mid_x:.1f}, {mid_y:.1f})", fontsize=10, ha='left')

# Add labels and grid
plt.xlabel("X-axis")
plt.ylabel("Y-axis")
plt.title("Line Joining Two Points")
plt.grid(True)
plt.legend()
plt.axis('equal')

# Show the plot
plt.show()

